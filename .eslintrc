{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "indent": [2, 4, {
      "SwitchCase" : 1
    }],
    "prefer-spread": "error",
    "react/no-unknown-property": [2, { "ignore" : ["class"] } ],
    "react/jsx-indent": [2, 4],
    "react/jsx-indent-props": [2, 4],
    "max-len": ["error", { "ignorePattern": "import" }]
  }
}
